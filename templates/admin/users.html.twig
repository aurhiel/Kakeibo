{% extends 'admin/base.html.twig' %}

{% block body %}
<div class="container">
  <div class="card bg-dark overflow-hidden">
    <div class="card-header">
      <h3 class="h4 mb-0">Utilisat&middot;eur&middot;rice&middot;s du site</h3>
    </div>
    <table class="table table-striped table-monospaced table-dark mb-0">
      <thead>
        <tr>
          <th class="col-id">#</th>
          <th class="col-username">Nom d'utilisateur</th>
          <th class="col-email">Email</th>
          <th class="col-register-date">Date d'inscription</th>
          <th class="col-actions">Actions</th>
        </tr>
      </thead>
      <tbody>
      {% for user in users %}
        <tr>
          <td class="col-id">{{ user.id }}</td>
          <td class="col-username">{{ user.username|anonymize }}</td>
          <td class="col-email">
            {% set email_splitted = user.email|split('@') %}
            {% set domain = email_splitted[1]|split('.') %}
            {{ email_splitted[0]|anonymize }}@{{ domain[0]|anonymize }}.{{ domain[1] }}
          </td>
          <td class="col-register-date">{{ user.registerDate|format_datetime('medium', 'short') }}</td>
          <td class="col-actions">
            <a href="#todo-delete" class="btn btn-danger">
              Suppr.
            </a>
          </td>
        </tr>
      {% endfor %}
      </tbody>
    </table>
  </div>
</div>
{% endblock %}
