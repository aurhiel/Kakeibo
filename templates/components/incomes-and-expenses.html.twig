
<div class="row">
  <div class="col-12 col-xl-6 mb-4">
    <div class="card bg-gradient-success text-white text-shadow border-0">
      <div class="card-body">
        <div class="d-flex align-items-center">
          <div class="col pl-0">
            <h5 class="card-title small text-uppercase mb-1">Revenus</h5>
            {% include 'components/price.html.twig' with {
              amount        : incomes,
              currency      : bank_account.currency.label,
              disable_color : true,
              custom_class  : 'font-weight-bold h5 no-wrap' } %}
          </div>
          <div class="col-auto px-0">
            <span class="avatar">
              <span class="avatar-text avatar-text-big rounded-circle bg-white shadow-sm text-success">
                <span class="icon-log-in"></span>
              </span>
            </span>
          </div>
        </div>
        <div class="pt-1 mt-3 small text-muted border-top">
          Période de {{ date('01-' ~ totals_month ~ '-' ~ totals_year)|localizeddate('none', 'none', 'fr', 'Europe/Paris', 'MMMM')|capitalize }} {{ totals_year }}
        </div>
      </div>
    </div>
  </div>
  <div class="col-12 col-xl-6 mb-4">
    <div class="card bg-gradient-danger text-white text-shadow border-0">
      <div class="card-body">
        <div class="d-flex align-items-center">
          <div class="col pl-0">
            <h5 class="card-title small text-uppercase mb-1">Dépenses</h5>
            {% include 'components/price.html.twig' with {
              amount        : expenses,
              currency      : bank_account.currency.label,
              disable_color : true,
              custom_class  : 'font-weight-bold h5 no-wrap' } %}
          </div>
          <div class="col-auto px-0">
            <span class="avatar">
              <span class="avatar-text avatar-text-big rounded-circle bg-white shadow-sm text-danger">
                <span class="icon-log-out"></span>
              </span>
            </span>
          </div>
        </div>
        <div class="pt-1 mt-3 small text-muted border-top">
          Période de {{ date('01-' ~ totals_month ~ '-' ~ totals_year)|localizeddate('none', 'none', 'fr', 'Europe/Paris', 'MMMM')|capitalize }} {{ totals_year }}
        </div>
      </div>
    </div>
  </div>
</div>
