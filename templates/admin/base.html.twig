{% extends 'base.html.twig' %}

{# Custom stylesheets from twig templates #}
{% block stylesheets %}
  {{ encore_entry_link_tags('kb-admin') }}
{% endblock %}

{# Custom javascripts from twig templates #}
{% block javascripts %}
  {{ encore_entry_script_tags('kb-admin') }}
{% endblock %}

{# Header #}
{% block header %}
  <div class="app-header">
    {% include 'components/header.html.twig' %}

    {# Admin navigation #}
    <div class="container mb-4">
      <div class="btn-group" role="group" aria-label="Admin navigation">
        <a href="{{ path('admin') }}"
          class="btn btn{% if app.request.attributes.get('_route') == 'admin' %}{% else %}-outline{% endif %}-primary text-white">
          Accueil
        </a>
        <a href="{{ path('admin_users') }}"
          class="btn btn{% if app.request.attributes.get('_route') == 'admin_users' %}{% else %}-outline{% endif %}-primary text-white">
          Utilisateurs
        </a>
        <a href="{{ path('admin_categories') }}"
          class="btn btn{% if app.request.attributes.get('_route') == 'admin_categories' %}{% else %}-outline{% endif %}-primary text-white">
          Cat√©gories
        </a>
      </div>
    </div>
  </div>
{% endblock %}
